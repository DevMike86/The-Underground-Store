    const myAPI = "https://your-name.ngrok-free.app/v1/models";

    async function checkStatus() {
        try {
            const response = await fetch(myAPI, {
                headers: { "ngrok-skip-browser-warning": "true" }
            });
            if (response.ok) {
                document.getElementById('api-status').innerText = "ONLINE (UNCENSORED)";
                document.getElementById('api-status').style.color = "#00ffcc";
            }
        } catch (error) {
            console.log("AI Server is resting.");
        }
    }
    checkStatus();
</script>

